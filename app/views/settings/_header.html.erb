<h1><%= @page_title = "Your Settings" %></h1>

<div id="sidebar">
	<ul class="settings">
		<li <%= current_if_context_is(:bio) %>>
			<%= link_to "Bio", bio_settings_url %>
		</li>
		<li <%= current_if_context_is(:picture) %>>
			<%= link_to "Picture", picture_settings_url %>
		</li>
		<li <%= current_if_context_is(:username_email) %>>
			<%= link_to "User name and email", username_email_settings_url %>
		</li>
		<li <%= current_if_context_is(:password) %>>
			<%= link_to "Password", password_settings_url %>
		</li>
	</ul>
</div>
