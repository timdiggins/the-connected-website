<div class="posts">
	<%= will_paginate(@posts, :prev_label => "Newer", :next_label => "Older", :inner_window => 2) if params[:page] %>
	<% for post in @posts %>
		<div class="post">
			<p class="avatar">
				<%= link_to_avatar_for(post.user, :medium) %>
			</p>
			<div class="postContent">
					<h2<% if post.has_attachment? %> class="file"<% elsif post.video_embed_tags %> class="video"<%end%>>
          		<%= link_to h(post), post %>
          </h2>
						 
					<%=render :partial => 'meta', :locals=>{:post=>post}%>
					<p><%= post.brief %>
					
					<% if post.video_embed_tags %>
        	  <span class="watch">
        	    <%= link_to "Watch video", post %>
        	  </span>
        	<% end %>
        	
        	</p>
				
					<% unless post.tags.empty? %>
						<p class="tags">posted in
						<% for tag in post.tags %>
							<%= link_to tag, tag, :class => "tag" %>
						<% end %></p>
					<%end %>
			</div>
		</div>
	<% end %>
</div>	

<%= will_paginate @posts, :prev_label => "Newer", :next_label => "Older", :inner_window => 2 %>
