<div id="header">
<ul id="topNavigation">
  <% if logged_in? %>
		<li><%= link_to('Settings', bio_settings_url) %></li>
		<li><%= link_to('Your public profile', user_url(current_user)) %></li>
		<li><%= link_to('Logout', logout_url) %></li>

	<% else %>
		<li><%= link_to "Login", login_url %></li>
		<li><%= link_to "Join", signup_url %></li>
	<% end %>
</ul>

<div id="search" style="display:none">
	<form action="#" method="get">
		<input id="s" name="s" onblur="resetTextfield(this)" onfocus="resetTextfield(this)" type="text" value="Search ..." />
	</form>
</div>
<p id="add"><%= link_to "Start a discussion", new_post_url %></p>  
<div id="logo"><%= link_to "The Connected Republic", root_url %></div>



<%= render :partial => 'layouts/tabs' %>



<% if session[:as_someone_else] %>
  <div id="dangerAdmin">
    <p><strong>CAREFUL!  You're logged in as <%= current_user %> !</strong></p>
  </div>
<% end %>
</div>

<%= render(:partial => '/layouts/flash_details') %>

